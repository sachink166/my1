pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
                // Example: Build your application
                echo 'Building your application...'
                sh 'mvn clean package'
            }
        }
        stage('Test') {
            steps {
                // Example: Run tests
                echo 'Running tests...'
                sh 'mvn test'
            }
        }
        stage('Deploy') {
            steps {
                // Example: Deploy to a server
                echo 'Deploying your application...'
                sh 'ssh user@server "deploy_script.sh"'
            }
        }
    }
    
    post {
        success {
            // Example: Actions to take if the pipeline succeeds
            echo 'Pipeline succeeded!'
        }
        failure {
            // Example: Actions to take if the pipeline fails
            echo 'Pipeline failed!'
        }
        always {
            // Example: Cleanup or final actions
            echo 'Pipeline completed.'
        }
    }
}
